@model EmailViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />    
</head>
<body>
    <div>Согласована заявка на доступ к ресурсу @Model.Resources[0].Name для сотрудников:
    <ol>
        @foreach (RequestDetail detail in Model.Details)
        {
            <li>@detail.EmployeeAccess.FullName - @detail.Role.Name</li>
        }
    </ol>
        <p>Комментарий: @Model.Request.Comment</p>
        <p>Ссылка на заявку: <a href="@Model.Url">@Model.Request.RequestID</a></p>
    </div>   
</body>
</html>