@model RequestDetailViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Предоставлен доступ к ресурсу @Model.Resource.Name</title>
    <style>
        body {
            max-width: 700px;
        }

        p, div, td, tr, ul, li {
            color: #000000;
            font-family: Arial, Helvetica, sans-serif;
            font-size: 12px;
        }

        td {
            vertical-align: bottom;
            padding: 10px 0;
        }

        .header {
            background-color: #FFC573;
            color: #FFF;
            text-align: center;
            font-weight: bold;
            padding: 5px 0;
        }

        .comment {
            font-style: italic;
            color: #969696;
        }

        ul {
            line-height: 80%;
            list-style-type: square;
            list-style-position: outside;
        }
    </style>
</head>
<body>
    <table>
        <tr><td class='header'>Заявка на доступ к информационным ресурсам</td></tr>
        <tr>
            <td>
                <div>
                    Уважаемый(ая) @Model.EmployeeAccess.FullName,
                    <br /> вам предоставлен доступ к информационному ресурсу:
                    <ul>
                        <li>Название ресурса: @Model.Resource.Name</li>
                        <li>Роль: @Model.Role.Name</li>
                    </ul>
                </div>
                <p>
                    Связанная заявка OTRS:
                    <a href="@Model.TicketUrl">Ticket @Model.Ticket.TicketNumber</a>
                </p>
                <p class='comment'>Отвечать на данное письмо не требуется</p>
            </td>
        </tr>
    </table>
</body>
</html>