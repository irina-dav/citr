@model LoginViewModel
@{ Layout = "_Layout";}

<div class="container">
<div class="login-form">
    <div class="main-div">
        <div class="panel">
            <h2>Вход в систему</h2>
            <p>Укажите свой логин и пароль</p>
        </div>
        <div class="alert-danger list-unstyled error rounded" asp-validation-summary="All"></div>
        <form id="Login" asp-action="Login" method="post">
            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
            <div class="form-group">
                <input type="text" asp-for="Username" class="form-control" id="inputEmail" placeholder="Логин">
            </div>
            <div class="form-group">
                <input type="password" asp-for="Password" class="form-control" id="inputPassword" placeholder="Пароль">
            </div>
            <button type="submit" class="btn btn-success">Вход</button>
        </form>
    </div>    
</div>
</div>